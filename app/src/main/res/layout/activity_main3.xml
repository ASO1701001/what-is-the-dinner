<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main3Activity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="こんだて入力"
            app:layout_constraintStart_toStartOf="@+id/radioGroup" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"/>
    <Button
            android:text="もどる"
            android:layout_width="105dp"
            android:layout_height="54dp" android:id="@+id/button7"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"/>
    <Button
            android:text="へんじをそうしん"
            android:layout_width="145dp"
            android:layout_height="50dp" android:id="@+id/button8"
            app:layout_constraintTop_toTopOf="@+id/button7" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"/>
    <TextView
            android:text="ばんごはんなあに"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.521"/>
    <RadioGroup
            android:layout_width="150dp"
            android:layout_height="260dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" android:layout_marginBottom="280dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/radioGroup">
        <RadioButton
                android:text="こんだてその1"
                android:layout_width="150dp"
                android:layout_height="50dp" android:id="@+id/radioButton"
                android:layout_marginTop="30dp"
                android:checked="false" android:textAlignment="viewStart" android:textSize="18sp"/>
        <RadioButton
                android:text="こんだてその2"
                android:layout_width="150dp"
                android:layout_height="50dp" android:id="@+id/radioButton2" android:textSize="18sp"/>
        <RadioButton
                android:text="こんだてその3"
                android:layout_width="150dp"
                android:layout_height="50dp" android:id="@+id/radioButton3" android:textSize="18sp"/>
        <RadioButton
                android:text="こんだてその4"
                android:layout_width="150dp"
                android:layout_height="50dp" android:id="@+id/radioButton4" android:textSize="18sp"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>